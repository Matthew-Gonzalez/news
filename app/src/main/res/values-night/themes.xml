<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.News" parent="Theme.MaterialComponents.NoActionBar">
    <item name="android:windowLightStatusBar">false</item>
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/dark_textColorPrimary</item>
    <item name="colorPrimaryVariant">@color/dark_textColorPrimary</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/dark_textColorSecondary</item>
    <item name="colorSecondaryVariant">@color/dark_textColorSecondary</item>
    <item name="colorOnSecondary">@color/white</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">@color/dark_statusBarColor</item>
    <item name="android:windowBackground">@color/dark_windowBackground</item>
    <item name="android:navigationBarColor">@color/dark_toolbarBackground</item>
  </style>

  <!-- Toolbar -->
  <style name="Theme.News.Toolbar" parent="Widget.MaterialComponents.ActionBar.Primary">
    <item name="android:background">@color/dark_toolbarBackground</item>
    <item name="titleTextColor">@color/dark_toolbarTitleTextColor</item>
    <item name="subtitleTextColor">@color/dark_toolbarSubtitleTextColor</item>
    <item name="colorControlNormal">@color/dark_windowBackground</item>
    <item name="android:colorControlNormal">@color/dark_windowBackground</item>
    <item name="android:editTextColor">@color/white</item>
    <item name="android:textColorHint">@color/dark_windowBackground</item>
  </style>

  <!-- News -->
  <style name="Theme.News.Item">
    <item name="android:background">@color/dark_windowBackground</item>
  </style>
</resources>