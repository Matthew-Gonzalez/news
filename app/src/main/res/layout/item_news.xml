<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingBottom="4dp"
  android:background="@color/white"
  android:orientation="horizontal">

  <ImageView
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:paddingTop="2dp"
    android:paddingStart="2dp"
    android:paddingEnd="2dp"
    android:src="@mipmap/ic_launcher" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/in_tv_author"
        style="@style/NewsAuthorText"
        android:text="Author" />

      <TextView
        android:id="@+id/in_tv_source"
        style="@style/NewsSourceText"
        android:text="Source" />

      <TextView
        android:id="@+id/in_tv_published_at"
        style="@style/NewsPublishedAtText"
        android:text="2020.dic.05" />
    </LinearLayout>

    <TextView
      android:id="@+id/in_tv_title"
      style="@style/NewsTitleText"
      android:text="The Title" />

    <TextView
      android:id="@+id/in_tv_description"
      style="@style/NewsDescriptionText"
      android:text="The Description" />
  </LinearLayout>
</LinearLayout>