<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    style="@style/News">

  <com.facebook.drawee.view.SimpleDraweeView
    android:id="@+id/in_sd_image"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:paddingTop="2dp"
    android:paddingStart="2dp"
    android:paddingEnd="2dp"
    android:src="@mipmap/ic_launcher"
    fresco:placeholderImage="@drawable/ic_launcher_background"  />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/in_tv_author"
        style="@style/NewsAuthorText"
        android:text="Author" />

      <TextView
        android:id="@+id/in_tv_source"
        style="@style/NewsSourceText"
        android:text="Source" />

      <TextView
        android:id="@+id/in_tv_published_at"
        style="@style/NewsPublishedAtText"
        android:text="2020.dic.05" />
    </LinearLayout>

    <TextView
      android:id="@+id/in_tv_title"
      style="@style/NewsTitleText"
      android:text="The Title" />

    <TextView
      android:id="@+id/in_tv_description"
      style="@style/NewsDescriptionText"
      android:text="The Description" />

  </LinearLayout>
</LinearLayout>